{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "release-notes-service-ui": {
            "projectType": "application",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "scss"
                }
            },
            "root": "",
            "sourceRoot": "src",
            "prefix": "app",
            "architect": {
                "build": {
                    "builder": "@angular/build:application",
                    "options": {
                        "outputPath": {
                          "base": "dist/release-notes-service-ui"
                        },
                        "index": "src/index.html",
                        "tsConfig": "tsconfig.app.json",
                        "inlineStyleLanguage": "scss",
                        "assets": [
                            "src/favicon.ico",
                            "src/favicon_grey.ico",
                            "src/favicon_red.ico",
                            "src/favicon_green.ico",
                            "src/favicon_yellow.ico",
                            "src/assets"
                        ],
                        "styles": [
                            "./node_modules/bootstrap/dist/css/bootstrap.min.css",
                            "./node_modules/@fortawesome/fontawesome-free/css/all.css",
                            "src/styles.scss",
                            "./node_modules/quill/dist/quill.snow.css"
                        ],
                        "scripts": [
                            "./node_modules/jquery/dist/jquery.min.js",
                            "./node_modules/@popperjs/core/dist/umd/popper.min.js",
                            "./node_modules/bootstrap/dist/js/bootstrap.min.js",
                            "./node_modules/turndown/dist/turndown.js"
                        ],
                        "browser": "src/main.ts",
                        "allowedCommonJsDependencies": [
                            "jquery",
                            "quill-delta",
                            "file-saver"
                        ],
                        "stylePreprocessorOptions": {
                          "includePaths": [
                            "."
                          ]
                        }
                    },
                    "configurations": {
                        "production": {
                            "baseHref": "/release-notes-management/",
                            "outputHashing": "all"
                        },
                        "development": {
                          "optimization": false,
                            "extractLicenses": false,
                            "sourceMap": true,
                            "namedChunks": true
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "serve": {
                    "builder": "@angular/build:dev-server",
                    "options": {
                        "liveReload": false
                    },
                    "configurations": {
                        "production": {
                          "buildTarget": "release-notes-service-ui:build:production"
                        },
                        "development": {
                          "buildTarget": "release-notes-service-ui:build:development"
                        }
                    },
                    "defaultConfiguration": "development"
                },
                "extract-i18n": {
                    "builder": "@angular/build:extract-i18n",
                    "options": {
                      "buildTarget": "release-notes-service-ui:build"
                    }
                }
            }
        }
    }
}
